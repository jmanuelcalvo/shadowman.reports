<!DOCTYPE html>
<html>
<head>
  <title> Ansible Linux Packages Report </title>
  <link rel="stylesheet" href="css/main.css">
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script>
$("document").ready(function(){
  $click =  $('.expandclass');   // Click selector
  $click.click(function () {
    $clicked = $(this);
    $expand = $(this).parent('.expand').next();  // Expand and collapse content selector
        //open up the content needed - toggle the slide- if visible, slide up, if not slidedown.
        $expand.slideToggle(500, function () {
            //execute this after slideToggle is done
            //change text of expand based on visibility of content div
        });
    });
});
</script>
</head>
<body>
<center>
<h1>Ansible Linux Packages Report</h1>
</center>
<table>
    <thead>
        <tr>
            <th>Hostname</th>
            <th>Package Manager</th>
            <th>Operating System</th>
            <th>Operating System Version</th>
            <th>Kernel Version</th>
        </tr>
    </thead>
    <tbody>
{% for linux_host in groups['tag_Insights']|sort %}
        <tr>
            <td><p class="hostname">{{hostvars[linux_host]['inventory_hostname']}}</p>
<!–– INTERNAL TABLE FOR PACKAGES --!>
<div class="expand">
  <p class="expandclass">>Package Facts - Click to see details</p>
</div>
<div class="content">
<table id="subtable">
    <thead>
        <tr>
            <th>Package Name</th>
            <th>source</th>
            <th>release</th>
            <th>version</th>
        </tr>
    </thead>
    <tbody>
{% for packagename in hostvars[linux_host]['packages']|sort if hostvars[linux_host]['packages'] is defined %}
        <tr>
            <td>{{hostvars[linux_host]['packages'][packagename][0]['name']}}</td>
            <td>{{hostvars[linux_host]['packages'][packagename][0]['source']}}</td>
            <td>{{hostvars[linux_host]['packages'][packagename][0]['release']}}</td>
            <td>{{hostvars[linux_host]['packages'][packagename][0]['version']}}</td>
        </tr>
{% endfor %}
    </tbody>
</table>
</div>
</div>
<!–– END INTERNAL TABLE FOR PACKAGES --!>
<!–– INTERNAL TABLE FOR SERVICES --!>
<div class="expand">
  <p class="expandclass">>Services Facts - Click to see details</p>
</div>
<div class="content">
<table id="subtable">
    <thead>
        <tr>
            <th>Service Name</th>
            <th>State</th>
            <th>Source</th>
        </tr>
    </thead>
    <tbody>
{% for servicesname in hostvars[linux_host]['services']|sort if hostvars[linux_host]['services'] is defined %}
        <tr>
            <td>{{hostvars[linux_host]['services'][servicesname]['name']}}</td>
            <td>{{hostvars[linux_host]['services'][servicesname]['state']}}</td>
            <td>{{hostvars[linux_host]['services'][servicesname]['source']}}</td>
        </tr>
{% endfor %}
    </tbody>
</table>
</div>
</div>
 <!–– END INTERNAL TABLE FOR SERVICES --!>
            </td>
            <td>{{hostvars[linux_host]['ansible_pkg_mgr']|default("none")}}</td>
            <td>{{hostvars[linux_host]['ansible_os_family']|default("none")}}</td>
            <td>{{hostvars[linux_host]['ansible_distribution_version']|default("none")}}</td>
            <td>{{hostvars[linux_host]['ansible_kernel']|default("none")}}</td>
        </tr>
{% endfor %}
    </tbody>
</table>
<center><p>Created with</p><br><img src="webpage_logo.png" width="300">
</center>
</body>
</html>